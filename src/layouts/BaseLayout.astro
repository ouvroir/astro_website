---
import MetaData from '../components/MetaData.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const {title, description, permalink} = Astro.props;
---


<html lang="fr" prefix="og: https://ogp.me/ns# article: https://ogp.me/ns/article#">
  <head>
    <MetaData title={title} description={description} permalink={permalink}/>
  </head>
  <body>
    <div id="app">
      <Header/>
      <main>
        <slot />
      </main>  
      <Footer />
    </div>
  </body>
</html>

<!-- footer fixed at bottom, but when moved into main, does not stay at bottom, to be continued-->

<style>

#app {
  height: 100vh;

  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: auto 1fr;
  grid-template-areas: 
      'header'
      'main';
}

#app > header {
  grid-area: header;
  padding-bottom: 2rem;
}

#app > main {
  grid-area: main;
  overflow: auto;

} 

</style>