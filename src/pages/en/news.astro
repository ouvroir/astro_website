---
import BaseLayout from '/src/layouts/BaseLayout.astro'
import BlogPostPreview from '/src/components/BlogPostPreview.astro'
import {slugify} from '/src/data/languages.ts'

let title = "News"
let slug = "news"
let description = "Blog and announcements" /*events and newsletter*/
let permalink = "https://ouvroir.umontreal.ca/en/news/"
const currentPath = Astro.canonicalURL.pathname;


// Get all blog posts
let blogPosts = Astro.fetchContent('/src/_blog/*-en.md');
let crPosts = Astro.fetchContent('/src/_labouvroir/cr/*.md');
let allPosts = blogPosts.concat(crPosts)

allPosts = allPosts.sort((a, b) => (b.date).valueOf() - (a.date).valueOf());
let tagSet = new Set();
let allTags = [];
allPosts.forEach(p =>{
  p.tags.forEach(t => {
    tagSet.add(t)
  });
});

for (let t of tagSet){
  allTags.push(t)
}
allTags = allTags.sort();

---

<BaseLayout title={title} description={description} permalink={permalink} slug={slug}>
  <div class="container grid-xl">
    <div class="columns">
      <div class="col-12">
        <h1>{title}</h1>
      </div>
      <div class="col-9">
        <p></p>
        <p></p>
        <p></p>
        <p>{description}</p>
      </div>
      <div class="col-3">
        <p>Find and join our events on <a href="https://mobilizon.fr/@ouvroir_lab">Mobilizon</a>.</p>
        <p>Subscribe to our <a href="https://outlook.office365.com/owa/calendar/00612925e3e44352a2fecda3cc840ee0@umontreal.ca/c2e6e5f6a7264c3b99fb9f6ef3f69b617923860242817213963/calendar.ics">digital calendar</a>.</p>
      </div>  
      <div class="col-9">
          {allPosts.map(p => <BlogPostPreview post={p}/>)}
      </div>
      <div class="col-3 tagColumn">
            <h2>Tags</h2>
            {allTags.map(t => {
                return <div class="chip">
                  <a href={`${currentPath}tags/${slugify(t)}/`}>{t}</a>
                </div>
              }
            )} 
          </div>
    </div>
  </div>
</BaseLayout>
