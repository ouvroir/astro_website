        <img src={Astro.resolve('/style/img/UdeM/Logo_UdeM-RVB.png')} width="100%">
      </div>
      <div class="column col-md-4 logo">
        <img src={Astro.resolve('/style/img/CFI/fr/CFI_RGB-FR.png')} width="100%">
      </div>
      <div class="column col-md-4 logo">
        <img src={Astro.resolve('/style/img/qc/svg/QUEBEC_couleur.svg')} width="100%">
      </div>
    </div>
  </div>   

