---
import BaseLayout from '/src/layouts/BaseLayout.astro'
import BlogPostPreview from '/src/components/BlogPostPreview.astro'
import {slugify} from '/src/data/languages.ts'

let title = "Actualités"
let slug = "actualites"
let description = "Blogue et annonces du lab" /*événements et lettre d'information*/
let permalink = "https://ouvroir.umontreal.ca/fr/actualites/"
const currentPath = Astro.canonicalURL.pathname;

// Get all blog posts
let blogPosts = Astro.fetchContent('/src/_blog/*-fr.md');
let crPosts = Astro.fetchContent('/src/_labouvroir/cr/*.md');

//ajout du slug pour les cr
crPosts.forEach(p => {
  p.date = p.date.replace('T00:00:00.000Z', '')
  p.slug = `cr${p.date}`
})


//Rassemble tous les contenus
let allPosts = blogPosts.concat(crPosts)
//tri par date (ne semble pas s'appliquer)
allPosts = allPosts.sort((a, b) => (b.date).valueOf() - (a.date).valueOf());

let tagSet = new Set();
let allTags = [];
allPosts.forEach(p =>{
  p.tags.forEach(t => {
    tagSet.add(t)
  });
});

for (let t of tagSet){
  allTags.push(t)
}
allTags = allTags.sort();

---

<BaseLayout title={title} description={description} permalink={permalink} slug={slug}>
  <div class="container grid-xl">
    <div class="columns">
      <div class="col-12">
        <h1>{title}</h1>
      </div>
      <div class="col-9">
        <p></p>
        <p></p>
        <p></p>
        <p>{description}</p>
      </div>
      <div class="col-3">
        <p>Retrouvez et rejoignez nos événements sur <a href="https://mobilizon.fr/@ouvroir_lab">Mobilizon</a>.</p>
        <p>S'abonner au <a href="https://outlook.office365.com/owa/calendar/00612925e3e44352a2fecda3cc840ee0@umontreal.ca/c2e6e5f6a7264c3b99fb9f6ef3f69b617923860242817213963/calendar.ics">calendrier numérique de l’Ouvroir</a>.</p>
      </div>
      <div class="col-9">
        {allPosts.map(p => <BlogPostPreview post={p}/>)} <!-- map does not keep the order-->
      </div>
      <div class="col-3 tagColumn">
            <h2>Tags</h2>
            {allTags.map(t => {
                return <div class="chip">
                  <a href={`${currentPath}tags/${slugify(t)}/`}>{t}</a>
                </div>
              }
            )} 
          </div>
    </div>
  </div>
</BaseLayout>
<!-- 
  à par catégorie selon tag
  ├─ Actualités
      ├─ Billets blogue
      ├─ Annonces / événements
      └─ Lettre d’information (v2)

-->

