---
import {
    mapGenericToText,
    getLanguageFromURL
} from '/src/data/languages.ts';

export interface Props{
    post: any;
}

const currentPath = Astro.request.canonicalURL.pathname;
const lang = currentPath && getLanguageFromURL(currentPath);

const { post } = Astro.props;
let tags = post.tags
---
<article class="section">
    <header>
        <a href={`${post.slug}/`}><h3 class="title">{post.title}</h3></a>
    </header>
    <p>{post.description}</p>
    <div>{tags.map(t => <span class="chip">{t}</span>)}</div>
    <a href={`${post.slug}/`}>{mapGenericToText["LIRE_SUITE"][lang]}</a>
</article>

