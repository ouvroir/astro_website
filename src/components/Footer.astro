---
import {
    getLanguageFromURL,
    mapGenericToText
} from '/src/data/languages.ts';

const currentPath = Astro.request.canonicalURL.pathname;
const lang = currentPath && getLanguageFromURL(currentPath);
---
<footer>
    <div id="ext-links">
        <a rel="noopener noreferrer nofollow" target="_blank" href="https://github.com/ouvroir">Github</a>
        <a rel="noopener noreferrer nofollow" target="_blank" href="https://hypothes.is/groups/pM5dq7b4/ouvroir"><i class="ai ai-hypothesis-square ai-2x"></i></a>
        <a rel="noopener noreferrer nofollow" target="_blank" href="https://www.zotero.org/groups/2480242/ouvroir"><i class="ai ai-zotero-square ai-2x"></i></a>
        <a rel="noopener noreferrer nofollow" target="_blank" href="https://twitter.com/labouvroir">Twitter</a>
    </div>
    <div>
        <p><i>Ouvroir</i>.  {mapGenericToText["TAGLINE"][lang]} | 2021</p>
    </div>
</footer>

<!--
├─ Footer
    ├─ tagline
    ├─ Liens et médias sociaux: Twitter, Github, Zotero, Hypothesis
    └─ RSS
-->



<style>
footer {
    text-align: center;
    padding-top: 2rem;
}

#ext-links{
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
</style>