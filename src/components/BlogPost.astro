---
export interface Props {
  title: string;
  description: string,
  author: string;
  publishDate: Date; /*why a string*/
  tags: Array<string>
}

const { title, author, description, publishDate, tags } = Astro.props;
---
<div class="container">
    <article class="content">
        <header class="hero bg-gray">
            <div class="hero-body">
                <p>Actualités de l'Ouvroir</p>
                <h1>{title}</h1>
                <p>{description}</p>
                <p>publié le {publishDate} par {author}</p>
                <p>{tags.map(t => <span class="chip">{t}</span>)}</p>
            </div>
        </header>
        <main>
            <slot />
        </main>
    </article>
</div>

